{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Auction",
  "description": "Auction data structure for the Auctiondeal platform",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the auction"
    },
    "status": {
      "type": "string",
      "enum": ["active", "cancelled", "completed"],
      "description": "Current status of the auction"
    },
    "auctionDate": {
      "type": "string",
      "format": "date",
      "description": "Date when the auction takes place"
    },
    "auctionTime": {
      "type": "string",
      "format": "time",
      "description": "Time when the auction starts"
    },
    "auctionLocation": {
      "type": "string",
      "description": "Location where the auction takes place"
    },
    "registrationDeadline": {
      "type": "string",
      "format": "date-time",
      "description": "Deadline for auction registration"
    },
    "circulationDeadline": {
      "type": "string",
      "format": "date-time",
      "description": "Deadline for circulation"
    },
    "responsibleOffice": {
      "type": "string",
      "description": "Office responsible for the auction"
    },
    "additionalLegalRemedy": {
      "type": "string",
      "description": "Additional legal remedy information"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the record was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the record was last updated"
    }
  },
  "required": ["id", "status", "auctionDate"],
  "additionalProperties": false
}