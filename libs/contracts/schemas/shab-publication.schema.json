{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShabPublication",
  "description": "SHAB publication data from Swiss Commercial Gazette",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the SHAB publication record"
    },
    "metaId": {
      "type": "string",
      "description": "SHAB meta ID for tracking"
    },
    "publicationNr": {
      "type": "string",
      "description": "SHAB publication number"
    },
    "subsectionId": {
      "type": "string",
      "description": "SHAB subsection identifier"
    },
    "publicationDate": {
      "type": "string",
      "format": "date",
      "description": "Date when the publication was issued"
    },
    "xmlContent": {
      "type": "string",
      "description": "Complete XML content for audit trail and reprocessing"
    },
    "processedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the publication was processed"
    },
    "processingStatus": {
      "type": "string",
      "enum": ["pending", "processed", "failed", "skipped"],
      "description": "Status of the processing pipeline"
    },
    "extractionResults": {
      "type": "object",
      "description": "Results from LLM extraction process"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the record was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the record was last updated"
    }
  },
  "required": ["id", "metaId", "publicationNr", "subsectionId", "publicationDate", "xmlContent"],
  "additionalProperties": false
}